datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Group {
  id     Int     @id @default(autoincrement())
  name   String
  about  String?
  public Boolean @default(true)


  // relational
  author   User?  @relation(fields: [authorId], references: [id], name: "group-author")
  authorId Int?
  users    User[] @relation(name: "group-enroll")
  @@map(name: "groups")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")


  // relational
  groupsAuthored Group? @relation(name: "group-author")
  groupsEnrolled Group? @relation(name: "group-enroll", fields: [groupId], references: [id])
  groupId        Int?
  @@map(name: "users")
}
